# Frontend Dockerfile
FROM node:20-alpine

WORKDIR /app

# Copiar package.json
COPY desktop/package*.json ./
RUN npm install

# Copiar código del frontend
COPY desktop/ .

# Build para producción
RUN npm run build

# Servir con nginx
FROM nginx:alpine
COPY --from=0 /app/dist /usr/share/nginx/html
COPY docker/nginx.conf /etc/nginx/conf.d/default.conf

EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]
